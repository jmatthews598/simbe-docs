  "logo": {
    "light": "/logo/simbe-logo.png",
    "dark": "/logo/simbe-logo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
